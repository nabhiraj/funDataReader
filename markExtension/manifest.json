{
    "manifest_version": 3,
    "name": "Text Picker",
    "version": "1.0",
    "description": "Pick up the text value from a given class",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["*://*/*"]
}
  